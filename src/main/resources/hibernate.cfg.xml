<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- SQL Dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Database Connection Settings -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/onlyhibernate</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.jdbc.batch_size">30</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<!-- JDBC connection pool (use the built-in) update -->
		<property name="connection.pool_size">5</property>
		<property name="show_sql">true</property>


		<!-- Specifying Session Context -->
		<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
		<!--<property name="hibernate.current_session_context_class">thread</property> -->

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!-- Mapping With Model Class Containing Annotations -->
		<!--<mapping class="com.jcg.hibernate.maven.User" /> -->

		<mapping class="com.ar.hibernate.model.Department" />
		<mapping class="com.ar.hibernate.model.Employee" />
		<mapping class="com.ar.hibernate.model.SalaryGrade" />
		<mapping class="com.ar.hibernate.model.Timekeeper" />
		<mapping class="com.ar.hibernate.model.quizgiri.Topic" />
		<mapping class="com.ar.hibernate.model.quizgiri.SpecialCategory" />
		<mapping class="com.ar.hibernate.model.quizgiri.AlreadyPlayed" />
		<mapping class="com.ar.hibernate.model.quizgiri.Option" />
		<mapping class="com.ar.hibernate.model.quizgiri.Question" />
		<mapping class="com.ar.hibernate.model.quizgiri.TopicFollow" />
		<mapping class="com.ar.hibernate.model.quizgiri.Game" />

		<!-- List of XML mapping files -->
		<mapping resource="Employee.hbm.xml" />

	</session-factory>
</hibernate-configuration>